<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/avatar_background_screen"
    android:paddingHorizontal="30dp"
    android:clipToPadding="false"
    android:background="@drawable/login_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_ctn"
        android:background="@drawable/ctn_white_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avatar_title"
            android:textSize="@dimen/text_large"
            android:textColor="@color/colorButton"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/avatar_ctn"
            app:layout_constraintRight_toRightOf="@id/avatar_ctn"
            app:layout_constraintTop_toTopOf="@id/avatar_ctn"
            android:layout_marginTop="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>