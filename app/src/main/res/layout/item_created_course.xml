<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="@dimen/corner_radius"
    android:elevation="@dimen/elevation_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_item_created_course">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/item_created_course_img"
            android:src="@drawable/devices"
            android:scaleType="fitCenter"
            android:contentDescription="@string/course_description"/>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/item_created_course_name"
                android:text="@string/course_name"
                android:singleLine="true"
                android:textColor="@color/colorButton"
                android:textStyle="bold"
                android:textSize="@dimen/text_small"
                android:paddingHorizontal="@dimen/margin_base"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/item_created_course_price"
                android:text="@string/course_price"
                android:textSize="@dimen/text_14"
                android:textStyle="italic"
                android:textColor="@color/colorAccent"
                android:paddingHorizontal="@dimen/margin_base"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>