<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/login_background"
    android:background="@drawable/login_screen"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_account_ctn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ctn_white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:paddingVertical="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/aa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_acti_title"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/colorButton"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strname"
            android:id="@+id/aa_name"
            android:textSize="14sp"
            android:textColor="@color/colorButton"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/aa_title"
            app:layout_constraintLeft_toLeftOf="@id/aa_name_text" />

        <EditText
            android:id="@+id/aa_name_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:drawableStart="@drawable/account_circle_24px"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="text"
            android:autofillHints=""
            android:hint="@string/strname"
            app:layout_constraintTop_toBottomOf="@+id/aa_name"
            app:layout_constraintLeft_toLeftOf="@id/activity_account_ctn"
            app:layout_constraintRight_toRightOf="@id/activity_account_ctn" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strgender"
            android:id="@+id/aa_gender"
            android:textSize="14sp"
            android:textColor="@color/colorButton"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/aa_name_text"
            app:layout_constraintLeft_toLeftOf="@id/aa_gender_text" />


        <EditText
            android:id="@+id/aa_gender_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:drawableStart="@drawable/accessibility_24px_outlined"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:autofillHints=""
            android:hint="@string/strgender"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/aa_gender"
            app:layout_constraintLeft_toLeftOf="@id/activity_account_ctn"
            app:layout_constraintRight_toRightOf="@id/activity_account_ctn" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strdescript"
            android:id="@+id/aa_descript"
            android:textSize="14sp"
            android:textColor="@color/colorButton"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/aa_gender_text"
            app:layout_constraintLeft_toLeftOf="@id/aa_descript_text" />

        <EditText
            android:id="@+id/aa_descript_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:drawableStart="@drawable/message_24px_outlined"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="text"
            android:autofillHints=""
            android:hint="@string/strdescript"
            app:layout_constraintTop_toBottomOf="@+id/aa_descript"
            app:layout_constraintLeft_toLeftOf="@id/activity_account_ctn"
            app:layout_constraintRight_toRightOf="@id/activity_account_ctn" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strphone"
            android:id="@+id/aa_phone"
            android:textSize="14sp"
            android:textColor="@color/colorButton"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/aa_descript_text"
            app:layout_constraintLeft_toLeftOf="@id/aa_phone_text" />

        <EditText
            android:id="@+id/aa_phone_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:drawableStart="@drawable/perm_phone_msg_24px_outlined"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="phone"
            android:autofillHints=""
            android:hint="@string/strphone"
            app:layout_constraintTop_toBottomOf="@+id/aa_phone"
            app:layout_constraintLeft_toLeftOf="@id/activity_account_ctn"
            app:layout_constraintRight_toRightOf="@id/activity_account_ctn" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/straddress"
            android:id="@+id/aa_address"
            android:textSize="14sp"
            android:textColor="@color/colorButton"
            android:paddingHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/aa_phone_text"
            app:layout_constraintLeft_toLeftOf="@id/aa_address_text" />

        <EditText
            android:id="@+id/aa_address_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:drawableStart="@drawable/store_24px_outlined"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="text"
            android:autofillHints=""
            android:hint="@string/straddress"
            app:layout_constraintTop_toBottomOf="@+id/aa_address"
            app:layout_constraintLeft_toLeftOf="@id/activity_account_ctn"
            app:layout_constraintRight_toRightOf="@id/activity_account_ctn" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/login_button"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/save_text"
            android:textColor="@color/colorBtnText"
            app:layout_constraintTop_toBottomOf="@id/aa_address_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/ctn_white_background_2"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:text="< Back" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>